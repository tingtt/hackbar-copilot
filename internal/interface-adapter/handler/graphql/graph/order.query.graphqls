extend type Query {
  orders: [Order!]!
}

type Order {
  id: String!
  customerEmail: String!
  customerName: String!
  menuID: MenuID!
  timestamps: [OrderStatusUpdateTimestamp!]!
  status: OrderStatus!
  price: Float!
}

type MenuID {
  itemName: String!
  optionName: String!
}

type OrderStatusUpdateTimestamp {
  status: OrderStatus!
  timestamp: DateTime!
}

enum OrderStatus {
  ORDERED
  PREPARED
  DELIVERED
  CANCELED
  CHECKEDOUT

  UNKNOWN
}

scalar DateTime
