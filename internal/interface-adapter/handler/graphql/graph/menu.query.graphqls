extend type Query {
  menu: [MenuItem!]!
}

type MenuItem {
  name: String!
  imageURL: String
  flavor: String
  options: [MenuItemOption!]
  minPriceYen: Float!
}

type MenuItemOption {
  name: String!
  category: String!
  imageURL: String
  materials: [String!]
  outOfStock: Boolean!
  priceYen: Float!
  recipe: Recipe
}
